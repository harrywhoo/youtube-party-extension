{
    "manifest_version": 3,
    "name": "YouTube Party Extension",
    "version": "1.0.0",
    "description": "Watch YouTube videos synchronously with friends",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "scripting",
        "webNavigation"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "http://localhost:8080/*"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "YouTube Party"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["https://www.youtube.com/watch*"],
            "js": ["content.js"],
            "run_at": "document_end"
        }
    ]
}